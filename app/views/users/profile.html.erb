<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="surface shadow-lg rounded-lg overflow-hidden">
    <div class="p-6">
      <div class="flex items-center space-x-4 mb-6">
        <div class="flex-shrink-0">
          <div class="h-16 w-16 rounded-full bg-blue-500 flex items-center justify-center aspect-square">
            <span class="text-2xl font-bold text-white"><%= current_user.name.first.upcase %></span>
          </div>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= current_user.name %></h1>
          <p class="text-gray-600"><%= current_user.email %></p>
        </div>
      </div>

      <div class="border-t border-gray-200 pt-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4"><%= t('views.users.profile.update_profile') %></h2>
        <%= form_with(model: current_user, url: profile_path, method: :patch, class: "space-y-4") do |f| %>
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div>
            <%= f.label :theme_preference, t('views.users.profile.theme_preference'), class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :theme_preference, 
                options_for_select([
                  [t('views.users.profile.theme_options.auto'), 'auto'],
                  [t('views.users.profile.theme_options.day'), 'day'],
                  [t('views.users.profile.theme_options.night'), 'night']
                ], current_user.theme_preference || 'auto'),
                { include_blank: false },
                { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
            <p class="mt-1 text-sm text-gray-500">
              <%= t('views.users.profile.theme_auto_help') %>
            </p>
          </div>

          <div>
            <%= f.submit t('views.users.profile.update_profile'), class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>

      <div class="border-t border-gray-200 pt-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4"><%= t('views.users.profile.data_export_import') %></h2>
        <div class="space-y-6">
          <!-- Export Section -->
          <div class="surface p-4 rounded-lg" style="background-color: var(--color-surface-elevated);">
            <h3 class="text-lg font-medium text-gray-900 mb-3"><%= t('views.users.profile.export_your_data') %></h3>
            <p class="text-gray-600 mb-4"><%= t('views.users.profile.export_intro') %></p>
            
            <div class="space-y-3">
              <!-- JSON Export -->
              <div class="flex items-center justify-between">
                <div>
                  <h4 class="font-medium text-gray-900"><%= t('views.users.profile.json_export') %></h4>
                  <p class="text-sm text-gray-600"><%= t('views.users.profile.json_export_help') %></p>
                </div>
                <%= link_to t('views.users.profile.download_json'), export_data_path(format: 'json'), 
                    class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
              </div>
              
              <!-- Encrypted ZIP Export -->
              <div class="flex items-center justify-between">
                <div>
                  <h4 class="font-medium text-gray-900"><%= t('views.users.profile.encrypted_zip_export') %></h4>
                  <p class="text-sm text-gray-600"><%= t('views.users.profile.encrypted_zip_help') %></p>
                </div>
                <a href="#" onclick="showEncryptedExport(); return false;" 
                   class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                  <%= t('views.users.profile.download_encrypted') %>
                </a>
              </div>
            </div>
          </div>

          <!-- Import Section -->
          <div class="surface p-4 rounded-lg" style="background-color: var(--color-surface-elevated);">
            <h3 class="text-lg font-medium text-gray-900 mb-3"><%= t('views.users.profile.import_data') %></h3>
            <p class="text-gray-600 mb-4"><%= t('views.users.profile.import_intro') %></p>
            
            <%= form_with(url: import_data_path, method: :post, multipart: true, class: "space-y-4") do |f| %>
              <div>
                <%= f.label :file, t('views.users.profile.select_file'), class: "block text-sm font-medium text-gray-700" %>
                <%= f.file_field :file, accept: '.json,.zip', 
                    class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
                <p class="mt-1 text-sm text-gray-500"><%= t('views.users.profile.max_file_size') %></p>
              </div>
              
              <div id="password-field" class="hidden">
                <%= f.label :password, t('views.users.profile.encryption_password'), class: "block text-sm font-medium text-gray-700" %>
                <%= f.password_field :password, 
                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
                <p class="mt-1 text-sm text-gray-500"><%= t('views.users.profile.encryption_password_help') %></p>
              </div>
              
              <div>
                <%= f.submit t('views.users.profile.import_data_submit'), 
                    class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="border-t border-gray-200 pt-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4"><%= t('views.users.profile.about_title') %></h2>
        <div class="prose max-w-none">
          <p class="text-gray-700">
            <%= t('views.users.profile.about_intro') %>
          </p>
          
          <h3 class="text-lg font-medium text-gray-900 mt-6 mb-3"><%= t('views.users.profile.key_features') %></h3>
          <ul class="list-disc pl-5 space-y-2 text-gray-700">
            <li><%= t('views.users.profile.feature_organize') %></li>
            <li><%= t('views.users.profile.feature_track') %></li>
            <li><%= t('views.users.profile.feature_archive') %></li>
            <li><%= t('views.users.profile.feature_reschedule') %></li>
            <li><%= t('views.users.profile.feature_monitor') %></li>
            <li><%= t('views.users.profile.feature_export') %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Encrypted Export Modal -->
<div id="encrypted-export-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50"
     data-i18n-passwords-no-match="<%= t('views.users.profile.passwords_no_match') %>"
     data-i18n-password-too-short="<%= t('views.users.profile.password_too_short') %>">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md surface">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t('views.users.profile.encrypted_export_modal_title') %></h3>
      <p class="text-sm text-gray-600 mb-4"><%= t('views.users.profile.encrypted_export_modal_intro') %></p>
      
      <form id="encrypted-export-form" class="space-y-4">
        <div>
          <label for="export-password" class="block text-sm font-medium text-gray-700"><%= t('views.users.profile.password_label') %></label>
          <input type="password" id="export-password" name="password" required
                 class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
        </div>
        
        <div>
          <label for="export-password-confirm" class="block text-sm font-medium text-gray-700"><%= t('views.users.profile.confirm_password_label') %></label>
          <input type="password" id="export-password-confirm" name="password_confirm" required
                 class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
        </div>
        
        <div class="flex justify-end space-x-3">
          <button type="button" onclick="hideEncryptedExport()"
                  class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 border border-gray-300 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
            <%= t('views.users.profile.cancel') %>
          </button>
          <button type="submit"
                  class="px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
            <%= t('views.users.profile.download') %>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
function showEncryptedExport() {
  document.getElementById('encrypted-export-modal').classList.remove('hidden');
}

function hideEncryptedExport() {
  document.getElementById('encrypted-export-modal').classList.add('hidden');
  document.getElementById('encrypted-export-form').reset();
}

document.getElementById('encrypted-export-form').addEventListener('submit', function(e) {
  e.preventDefault();
  
  const password = document.getElementById('export-password').value;
  const passwordConfirm = document.getElementById('export-password-confirm').value;
  
  const modal = document.getElementById('encrypted-export-modal');
  if (password !== passwordConfirm) {
    alert(modal.dataset.i18nPasswordsNoMatch || 'Passwords do not match!');
    return;
  }
  
  if (password.length < 6) {
    alert(modal.dataset.i18nPasswordTooShort || 'Password must be at least 6 characters long!');
    return;
  }
  
  // Create form and submit
  const form = document.createElement('form');
  form.method = 'GET';
  form.action = '<%= export_data_path %>';
  
  const formatInput = document.createElement('input');
  formatInput.type = 'hidden';
  formatInput.name = 'format';
  formatInput.value = 'encrypted_zip';
  form.appendChild(formatInput);
  
  const passwordInput = document.createElement('input');
  passwordInput.type = 'hidden';
  passwordInput.name = 'password';
  passwordInput.value = password;
  form.appendChild(passwordInput);
  
  document.body.appendChild(form);
  form.submit();
  document.body.removeChild(form);
  
  hideEncryptedExport();
});

// Show password field for ZIP files
document.querySelector('input[type="file"]').addEventListener('change', function(e) {
  const file = e.target.files[0];
  const passwordField = document.getElementById('password-field');
  
  if (file && file.name.toLowerCase().endsWith('.zip')) {
    passwordField.classList.remove('hidden');
  } else {
    passwordField.classList.add('hidden');
  }
});
</script> 