# Archive Statistics
<div class="surface shadow rounded-lg p-6 mb-6">
  <h2 class="text-xl font-semibold mb-4"><%= t('views.tasks.archive_index.archive_statistics') %></h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="p-4 rounded-lg" style="background-color: var(--color-surface-elevated);">
      <div class="text-sm text-gray-600"><%= t('views.tasks.archive_index.total_archived_tasks') %></div>
      <div class="text-2xl font-bold"><%= @archive_stats[:total_archived] %></div>
    </div>
    <div class="p-4 rounded-lg" style="background-color: var(--color-surface-elevated);">
      <div class="text-sm text-gray-600"><%= t('views.tasks.archive_index.archived_this_month') %></div>
      <div class="text-2xl font-bold"><%= @archive_stats[:archived_this_month] %></div>
    </div>
    <div class="p-4 rounded-lg" style="background-color: var(--color-surface-elevated);">
      <div class="text-sm text-gray-600"><%= t('views.tasks.archive_index.total_completed_tasks') %></div>
      <div class="text-2xl font-bold"><%= @archive_stats[:total_completed] %></div>
    </div>
  </div>
</div>

# Bulk Archive Form
<div class="surface shadow rounded-lg p-6 mb-6">
  <h3 class="text-lg font-semibold mb-4"><%= t('views.tasks.archive_index.bulk_archive_title') %></h3>
  <%= form_tag bulk_archive_path, method: :post, class: "flex items-end gap-4" do %>
    <div class="flex-grow">
      <label class="block text-sm font-medium text-gray-700 mb-1">
        <%= t('views.tasks.archive_index.archive_completed_before') %>
      </label>
      <%= date_field_tag :before_date, 6.months.ago.to_date, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <%= submit_tag t('views.tasks.archive_index.archive_tasks'), 
        class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
        data: { confirm: t('views.tasks.archive_index.archive_confirm') } %>
  <% end %>
</div>

# Archived Tasks List
<div class="surface shadow rounded-lg">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-xl font-semibold"><%= t('views.tasks.archive_index.archived_tasks_list') %></h2>
  </div>
  
  <div class="divide-y divide-gray-200">
    <% @archived_tasks.each do |task| %>
      <div class="p-6 hover:bg-gray-50" style="background-color: var(--color-surface);">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-medium text-gray-900">
              <%= task.title %>
            </h3>
            <div class="mt-1 text-sm text-gray-500">
              <%= t('views.tasks.archive_index.project_label') %>: <%= task.project.title %>
            </div>
          </div>
          <div class="text-right text-sm text-gray-500">
            <div><%= t('views.tasks.archive_index.archived_by') %>: <%= task.archived_by_user&.name || t('views.tasks.archive_index.unknown') %></div>
            <div><%= t('views.tasks.archive_index.archived_on') %>: <%= task.archived_at.strftime("%Y-%m-%d") %></div>
          </div>
        </div>
        
        <div class="mt-2 text-sm text-gray-700">
          <% if task.comments.any? %>
            <div class="mt-2">
              <strong><%= t('views.tasks.archive_index.last_comment') %>:</strong>
              <%= task.comments.order(created_at: :desc).first.content %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if @archived_tasks.empty? %>
    <div class="p-6 text-center text-gray-500">
      <%= t('views.tasks.archive_index.no_archived_tasks') %>
    </div>
  <% end %>
  
  <div class="px-6 py-4 border-t border-gray-200">
    <%= paginate @archived_tasks %>
  </div>
</div> 