<h2><%= t('views.devise.registrations.edit.title', resource_name: resource_name.to_s.humanize) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('views.devise.registrations.edit.currently_waiting', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, t('views.devise.registrations.edit.password_label') %> <i><%= t('views.devise.registrations.edit.password_help') %></i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('views.devise.registrations.edit.password_minimum', minimum: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('views.devise.registrations.edit.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, t('views.devise.registrations.edit.current_password') %> <i><%= t('views.devise.registrations.edit.current_password_help') %></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('views.devise.registrations.edit.update') %>
  </div>
<% end %>

<h3><%= t('views.devise.registrations.edit.cancel_account') %></h3>

<div><%= t('views.devise.registrations.edit.cancel_account_help') %> <%= button_to t('views.devise.registrations.edit.cancel_account_button'), registration_path(resource_name), data: { confirm: t('views.devise.registrations.edit.cancel_account_confirm'), turbo_confirm: t('views.devise.registrations.edit.cancel_account_confirm') }, method: :delete %></div>

<%= link_to t('views.devise.registrations.edit.back'), :back %>
